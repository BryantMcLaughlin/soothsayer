<h1 style="text-align: center;">Player Rankings for <%= params[:year] || 'Select a Year' %></h1>

<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Rank</th>
      <th>Player Name</th>
      <th>Position</th>
      <th>Total Points</th>
    </tr>
  </thead>
  <tbody>
    <% @player_rankings.each_with_index do |player, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= player[:name] %></td>
        <td><%= player[:position] %></td>
        <td><%= player[:total_points].round(2) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-grid gap-2">
<%= link_to "Create Another Rankings", results_rankings_path, class:"btn btn-primary" %>
</div>
<br>