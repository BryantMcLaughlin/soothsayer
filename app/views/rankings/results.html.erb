<h1>Player Rankings</h1>

<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Player Name</th>
      <th>Position</th>
      <th>Total Points</th>
    </tr>
  </thead>
  <tbody>
    <% @player_rankings.each_with_index do |player, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= player[:name] %></td>
        <td><%= player[:position] %></td>
        <td><%= player[:total_points].round(2) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Create more Rankings", new_ranking_path %>
